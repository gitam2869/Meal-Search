<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MealSearchFragment">

    <fragment
        android:id="@+id/MealSearchFragment"
        android:name="com.app.mealsearch.presentation.mealsearch.MealSearchFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_meal_search">

        <action
            android:id="@+id/action_meal_search_to_meal_details"
            app:destination="@id/MealDetailsFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/MealDetailsFragment"
        android:name="com.app.mealsearch.presentation.mealdetails.MealDetailsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_meal_details">

        <argument
            android:name="meal_id"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

    </fragment>

</navigation>